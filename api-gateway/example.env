# Environment mode - can be 'development' or 'production'
ENV=development

# Current running environment - can be 'development' or 'production'
CURRENT_RUN=development

# Development configuration
DEV_PORT=8080
DEV_HOST=localhost
DEV_API_URL=http://localhost:8080

# Production configuration
PROD_PORT=80
PROD_HOST=api.example.com
PROD_API_URL=https://api.example.com

# Services to check in health endpoint (comma-separated)
SERVICE_NAMES=user,product,auth

# API Gateway port
PORT=8080